@model ApplicationRole
@{
    ViewData["Title"] = "AddRole";
}

<h1>AddRole</h1>

<form asp-controller="ManageRole" asp-action="AddRole"  method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label class="control-label">نام :</label>
        <input class="form-control" name="roleName" asp-for="Name" />
    </div>
    <div class="form-group">
        <label class="control-label">سطح مقام :</label>
        <input class="form-control" name="rank" asp-for="RankOfRole" />
    </div>

    <button class="btn btn-primary" type="submit" >Submit</button>
</form>